<h2>Registreren</h2>
<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
  <ul>
    <% errors.forEach(function(error) { %>
      <li><%= error.msg %></li>
    <% }); %>
  </ul>
<% } %>
<form action="/juser/register" method="POST">
  <div>
    <label for="name">Naam</label>
    <input type="text" name="name" value="<%= typeof name !== 'undefined' ? name : '' %>" required>
  </div>
  <div>
    <label for="email">Email</label>
    <input type="email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" required>
  </div>
  <div>
    <label for="password">Wachtwoord</label>
    <input type="password" name="password" required>
  </div>
  <div>
    <label for="password2">Bevestig Wachtwoord</label>
    <input type="password" name="password2" required>
  </div>
  <button type="submit">Registreren</button>
</form>
<p>Heb je al een account? <a href="/juser/login">Log hier in</a></p>
