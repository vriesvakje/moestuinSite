<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Moestuin Verhuur</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h2>Login</h2>
        
        <% if(messages.error){ %>
            <% if(Array.isArray(messages.error)){ %>
                <% messages.error.forEach(function(error) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% }); %>
            <% } else { %>
                <div class="alert alert-danger"><%= messages.error %></div>
            <% } %>
        <% } %>
    
        <% if(messages.success){ %>
            <div class="alert alert-success"><%= messages.success %></div>
        <% } %>
    
        <form action="/juser/login" method="POST">
            <div>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div>
                <label for="password">Wachtwoord</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit">Login</button>
        </form>
        
        <p><a href="/forgot-password">Wachtwoord vergeten?</a></p>
        <p>Nog geen account? <a href="/juser/register">Registreer hier</a></p>
    </div>
</body>
</html>